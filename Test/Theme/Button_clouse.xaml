<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type Button}"
           x:Key="Button_clouse">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border CornerRadius="25" BorderBrush="CadetBlue" BorderThickness="2"
                            Background="#FF891717" Height="23" Width="23" >
                             <Grid>
                             <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <Line X1="3" Y1="2.5" X2="16.5" Y2="16" Stroke="CadetBlue" StrokeThickness="2" />
                                <Line X1="3" Y1="16.5" X2="16.5" Y2="2.5" Stroke="CadetBlue"  StrokeThickness="2"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>                        
        </Style.Setters>          
    </Style>

</ResourceDictionary>